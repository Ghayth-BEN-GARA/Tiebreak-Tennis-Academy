<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background_color"
    tools:context=".Activities.PasswordSecurityActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/back_24"
        android:background="@drawable/icon_background_gray"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_password_securite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_password_securite"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"/>

    <View
        android:id="@+id/first_hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_hr"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_update_password"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/desc_title_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black_light"
                android:text="@string/desc_edit_password_config"
                android:lineSpacingExtra="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_edit_password"/>

            <ImageView
                android:id="@+id/go_edit_password"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/next"
                app:tint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/desc_title_edit_password"
                app:layout_constraintBottom_toBottomOf="@id/desc_title_edit_password" />

            <View
                android:id="@+id/second_hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/desc_title_edit_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/title_journal_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_journal_log"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:drawableStart="@drawable/journal"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/second_hr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/desc_title_journal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black_light"
                android:text="@string/desc_journal_log"
                android:lineSpacingExtra="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_journal_log"/>

            <ImageView
                android:id="@+id/go_journal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/next"
                app:tint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/desc_title_journal"
                app:layout_constraintBottom_toBottomOf="@id/desc_title_journal" />

            <View
                android:id="@+id/third_hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/desc_title_journal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/title_connected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_connected"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:drawableStart="@drawable/login"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/third_hr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/desc_appareil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:lineSpacingExtra="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_connected"/>

            <TextView
                android:id="@+id/desc_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black_light"
                android:layout_marginTop="3dp"
                android:layout_marginStart="50dp"
                android:text="@string/app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_appareil"/>

            <TextView
                android:id="@+id/desc_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:layout_marginTop="3dp"
                android:layout_marginStart="50dp"
                android:text="@string/now"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_app"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/four_hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/desc_active"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/title_haking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_haking"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:drawableStart="@drawable/think_haking"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/four_hr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/desc_title_haking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black_light"
                android:text="@string/desc_think_haking"
                android:lineSpacingExtra="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_haking"/>

            <ImageView
                android:id="@+id/go_haking"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/next"
                app:tint="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/desc_title_haking"
                app:layout_constraintBottom_toBottomOf="@id/desc_title_haking" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/copyright_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>