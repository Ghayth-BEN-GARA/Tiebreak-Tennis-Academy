<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_coache"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/user"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerCrop"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/coache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lineSpacingExtra="5dp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/photo_coache"
        app:layout_constraintTop_toTopOf="@id/photo_coache"
        app:layout_constraintBottom_toBottomOf="@id/photo_coache"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black_light"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="@id/photo_coache"
        app:layout_constraintBottom_toBottomOf="@id/photo_coache"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/court"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_light"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/coache"
        app:layout_constraintStart_toEndOf="@id/photo_coache"/>

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/green"
        android:layout_marginTop="3dp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/photo_coache"
        app:layout_constraintTop_toBottomOf="@id/court"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/green"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/from"
        app:layout_constraintTop_toBottomOf="@id/court"
        app:layout_constraintBottom_toBottomOf="@id/from"/>

    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>